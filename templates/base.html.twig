<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block head_title %}{{ '_meta.title'|trans }}{% endblock head_title %}</title>
    <meta content="orcAsso, Application pour la gestion des clubs et des associations !" name="description"/>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('adminlte/css/adminlte.min.css') }}">
        <link rel="stylesheet" href="{{ asset('fontawesome/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('select2/css/select2.min.css') }}">
        <link rel="stylesheet" href="{{ asset('select2/select2-bootstrap4.min.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}"/>
</head>

<body class="hold-transition {% block body_class %}sidebar-mini{% endblock body_class %}">
{% block body %}{% endblock body %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('jquery/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('adminlte/js/adminlte.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('select2/js/select2.min.js') }}"></script>
    {{ importmap('app') }}
{% endblock javascripts %}
</body>
</html>
